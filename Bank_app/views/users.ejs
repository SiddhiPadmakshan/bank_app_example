<html lang="en">
  <head>
    <title>
      <%= title%>
    </title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="/stylesheets/style.css" rel="stylesheet" >
  </head>
  <body>
    <video playsinline="playsinline" autoplay="autoplay" muted="muted" loop="loop" style="position: fixed;">
      <source src="/images/video.mp4" type="video/mp4">
    </video>
    <br>
    <div class="container" style="position: relative; z-index: 1; margin: 0 auto;">
      <table class="table table-secondary text-muted table-hover ">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Profile Picture</th>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>View Profile</th>
          </tr>
        </thead>
        <tbody>
          <% if(data.length){ for(var i = 0; i < data.length; i++) {%>
          <tr>
            <td class="fw-bolder align-middle" ><%= data[i].id%></td>
            <td><img src="<%= data[i].displaypic%>" class="d-block shadow bg-body rounded" alt="displaypic" style="height: 80px;"></td>
            <td class="fw-bolder align-middle"> <%= data[i].full_name%></td>
            <td class="align-middle"><%= data[i].email%></td>
            <td class="align-middle"><%= data[i].age%></td>
            <td class="align-middle "><a class="btn btn-outline-dark shadow" href="profile/<%= data[i].id%>" >&nbsp&nbspSelect&nbsp&nbsp</a></td>
          </tr>
          <% } }else{ %>
          <tr>
            <td>No data ever existed.</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>